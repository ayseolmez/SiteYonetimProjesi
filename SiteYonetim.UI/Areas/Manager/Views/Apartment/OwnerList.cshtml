@{
    ViewData["Title"] = "OwnerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<!DOCTYPE html>
<html lang="en">
<body>


    <div class="pagetitle">
        <h1 style="color: azure;">Daire Sakinleri Listesi</h1>
    </div><!-- End Page Title -->


    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Daire Sakinleri</h5>

                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col"> No</th>
                                <th scope="col"> Adı</th>
                                <th scope="col"> Soyadı</th>
                                <th scope="col"> Araç Plakası</th>
                                <th scope="col"> Telefon Numarası</th>
                                <th scope="col"> Mail Adresi</th>
                                <th scope="col"> Durumu</th>
                            </tr>
                        </thead>

                        @foreach (var item in ViewBag.user)
                        {
                             
                             counter++;
                             <tbody>
                                 <tr>
                                     <th scope="row">@counter</th>
                                     <td>@item.Name</td>
                                     <td>@item.Surname</td>
                                     <td>@item.LicensePlate</td>
                                     <td>@item.PhoneNumber</td>
                                     <td>@item.Email</td>
                                     <td>@item.StatusUser</td>
                                    <td scope="col"><a href="~/Manager/Apartment/UpdateOwner/@item.Id" class="btn btn-success">Güncelle</a></td>
                                    <td scope="col"><a href="~/Manager/Apartment/DeleteOwner/@item.Id" class="btn btn-danger">Sil</a></td>
                                 </tr>
                             </tbody>
                                    
                            
                        }

                    </table>
                    <!-- End Table with stripped rows -->
                    <a href="/Manager/Apartment/CreateOwner/" class="btn btn-primary">Yeni Daire Sakini Ekle</a>
                </div>
            </div>

        </div>
    </div>






</body>

</html>





